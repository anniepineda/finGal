                <p><a id="news-link" href="<%= news.news_url %>">See more...</a></p>
                <% }) %>
         </section>
     </aside>
     
        <main>
            <h2>Your Search Result</h2>
            <section id="search-result">
           
                    <%- include('detail.ejs', {company: company}) %>
        
                    <input type="submit" value="Add to Portfolio" id="add-button">
                
            </form>  
          </section>
        </main>

        <%- include('../layout/footer') %>
    </div>
</body>

</html>