<!DOCTYPE html>
<html lang="en">
<%- include('../layout/head') %>

<body>

    <div class="container">
        <%- include('../layout/header') %>

     <aside id="news">
         <section>
            <% newsArray.forEach((news) => { %>
                <img id="news-image" src=<%= news.imageUrl %>>
